
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/Layout_Empty.cshtml";
}

@if (ViewBag.checkRegis == 1)
{
     <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Đăng ký thành công</h4>
        <p>Chào mừng bạn đến TravelIUH</p>
        <hr>
        <p class="mb-0">@Html.ActionLink("Đăng nhập", "Login", "Home", new { @class = "btn btn-outline-primary" })</p>
    </div>
}
else
{
    using (Html.BeginForm("Register", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row justify-content-md-center">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h4>Đăng ký tài khoản</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("Register", "Home", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div>
                                @ViewBag.error
                            </div>
                            <div class="form-group">
                                <label class="control-label">Tên tài khoản:</label>
                                <input class="form-control" type="text" name="idAccount" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Mật khẩu: </label>
                                <input class="form-control" type="password" name="password" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Tên người dùng:</label>
                                <input class="form-control" type="text" name="cusName" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Số CMND:</label>
                                <input class="form-control" type="text" name="idCard" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Số điện thoại:</label>
                                <input class="form-control" type="text" name="phone" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Địa chỉ:</label>
                                <input class="form-control" type="text" name="Address" />
                            </div>
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn btn-primary" value="Đăng ký" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}
