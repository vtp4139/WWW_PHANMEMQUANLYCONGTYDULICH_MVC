@model Entities.eCustomer

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Layout_Empty.cshtml";
}

<h3><span class="badge badge-primary">CHỈNH SỬA THÔNG TIN</span></h3>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <form>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.customerID)
        <div class="form-group">
            <label class="control-label col-md-2"><b>Tên người dùng:</b></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.customerName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.customerName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"><b>Số CMDN:</b></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.IDCard, new { @type = "date", htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IDCard, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"><b>Số điện thoại:</b></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"><b>Địa chỉ:</b></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
            </div>
        </div>
       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Cập nhập</button>
            </div>
        </div>
    </form>
}
<hr />
<div>
    @Html.ActionLink("← Quay trở lại danh sách tour", "Index")
</div>


