@model Entities.eFeedback

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Layout_Empty.cshtml";
}

<h3><span class="badge badge-danger">XÓA PHẢN HỒI</span></h3>
<div class="alert alert-warning">
    <strong>Warning!</strong> Bạn có chắc muốn xóa phản hồi này ?
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã đơn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.feedbackID)
        </dd>

        <dt>
            Tên khách hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.customerName)
        </dd>

        <dt>
            Tựa đề
        </dt>

        <dd>
            @Html.DisplayFor(model => model.title)
        </dd>

        <dt>
            Nội dung
        </dt>

        <dd>
            @Html.DisplayFor(model => model.content)
        </dd>

        <dt>
            Thời gian gửi
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dateCreate)
        </dd>
        <hr />
        <dd>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-outline-danger" />
                </div>
            }
        </dd>

    </dl>
</div>
<hr />

<p>
    @Html.ActionLink("← Quay trở lại danh sách tour", "Index")
</p>




