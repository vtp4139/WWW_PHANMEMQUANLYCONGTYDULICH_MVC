@model Entities.eBill

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Layout_Empty.cshtml";
}

<h3><span class="badge badge-danger">XÓA HÓA ĐƠN</span></h3>
<div class="alert alert-warning">
    <strong>Warning!</strong> Bạn có chắc muốn xóa hóa đơn này ?
</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã hóa đơn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.billID)
        </dd>

        <dt>
            Tên khách hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.customerName)
        </dd>

        <dt>
            Tên tour đăng ký
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tour.tourName)
        </dd>

        <dt>
            Thời gian đăng ký
        </dt>

        <dd>
            @Html.DisplayFor(model => model.dateCreate)
        </dd>
        <hr />
        <dd>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-outline-danger" />
                </div>
            }
        </dd>

    </dl>
</div>
<hr />

<p>
    @Html.ActionLink("← Quay trở lại danh sách tour", "Index")
</p>



